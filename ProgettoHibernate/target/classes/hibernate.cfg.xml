<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
 <session-factory>
 <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
 <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
 <property name="hibernate.connection.username">hibernate</property>
 <property name="hibernate.connection.password">pass123</property>
 <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate</property>
 <property name="show_sql">true</property>
 <property name="format_sql">false</property>
 <mapping class="it.alexandria.hibernate.model.Commento"/>
 <mapping class="it.alexandria.hibernate.model.Messaggio"/>
 <mapping class="it.alexandria.hibernate.model.Profilo"/>
 <mapping class="it.alexandria.hibernate.model.Risorsa"/>
 <mapping class="it.alexandria.hibernate.model.Vendita"/>
 <mapping class="it.alexandria.hibernate.model.Credenziali"/>
 </session-factory>
</hibernate-configuration>

